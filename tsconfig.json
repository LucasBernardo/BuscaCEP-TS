{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "./ts",
        "outDir": "./js",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
    },
    "include": ["./ts/**/*.ts"]
}